---
interface Props {
    firstSection: string[];
    secondSection: string[];
    aboutUsText: string;
    joinUsText: string;
}

const { firstSection, secondSection, aboutUsText, joinUsText } = Astro.props;

import firstImg from '../assets/images/lounge2023.jpg';
import secondImg from '../assets/images/massage.jpg';
---
<div class="container mx-auto px-4 py-8">
    <div class="bg-base-200 rounded-lg max-w-[1024px] w-full mx-auto p-4 md:p-8">
        <div class="flex flex-col lg:flex-row gap-8 items-center">
            <img src={firstImg.src} alt="Lounge" class="w-full max-w-lg rounded-lg shadow-2xl" />
            <div class="flex flex-col space-y-8">
                {firstSection.map((text) => (
                    <p class="text-xl">{text}</p>
                ))}
                <button onclick={`window.location.href='${Astro.url.pathname.startsWith('/en') ? '/en' : ''}/about'`} class="btn btn-active btn-accent btn-lg w-fit">
                    {aboutUsText}
                </button>
            </div>
        </div>

        <div class="divider my-8"></div>

        <div class="flex flex-col lg:flex-row-reverse gap-8 items-center">
            <img src={secondImg.src} alt="Activity" class="w-full max-w-lg rounded-lg shadow-2xl" />
            <div class="flex flex-col space-y-8">
                {secondSection.map((text) => (
                    <p class="text-xl">{text}</p>
                ))}
                <button onclick={`window.location.href='${Astro.url.pathname.startsWith('/en') ? '/en' : ''}/join'`} class="btn btn-active btn-accent btn-lg w-fit">
                    {joinUsText}
                </button>
            </div>
        </div>
    </div>
</div>
