---
// Get language from URL pattern
const currentPath = Astro.url.pathname;
const lang = currentPath.startsWith('/en') ? 'en' : 'zh';

const navLinks = {
  zh: {
    home: '首页',
    about: '关于',
    join: '加入',
    langSwitch: 'English'
  },
  en: {
    home: 'Home',
    about: 'About',
    join: 'Join',
    langSwitch: '中文'
  }
};

const t = navLinks[lang];
const langPrefix = lang === 'en' ? '/en' : '';
---

<nav class="nav-links">
	<a href={`${langPrefix}/`}>{t.home}</a>
	<a href={`${langPrefix}/about`}>{t.about}</a>
	<a href={`${langPrefix}/join`}>{t.join}</a>
	<a href={lang === 'en' ? Astro.url.pathname.replace('/en', '') : `/en${Astro.url.pathname}`}>
		{t.langSwitch}
	</a>
</nav>

<style>
	.nav-links {
		display: flex;
		gap: 1.5rem;
		align-items: center;
	}

	.nav-links a {
		color: #333;
		text-decoration: none;
		font-size: 1.1rem;
		transition: color 0.2s ease;
	}

	.nav-links a:hover {
		color: #666;
	}
</style>
